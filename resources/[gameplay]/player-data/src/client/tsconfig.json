{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "*": ["types/*"]
      },
      "outDir": "./",
      "noImplicitAny": false,
      "module": "ES2020",
      "target": "ES2021",
      "allowJs": true,
      "lib": ["ES2021"],
      "types": ["@citizenfx/client", "@types/node"],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": ["./**/*"],
    "exclude": ["**/node_modules", "**/__tests__/*"]
  }